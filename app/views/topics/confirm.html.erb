<div class="container">
    <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
        <h3>以下の内容で、送信する。</h3>

        <%= form_for(@topic) do |f| %>
            <%= f.hidden_field :title %>
            <%= f.hidden_field :content %>
            <%= f.hidden_field :image_cache %>
            <p><%= image_tag @topic.image.url if @topic.image.present?%></p>

            <p>タイトル:<%= @topic.title %></p>
            <p>本文:<%= @topic.content %></p>
            <%= f.submit "登録", class: 'btn btn-primary btn-block'%>
        <% end %>

        <%= form_for(@topic, url: new_topic_path, method:'get') do |f| %>
            <%= f.hidden_field :title %>
            <%= f.hidden_field :content %>
            <%= f.hidden_field :image_cache %>
            <%= f.submit "戻る", name: 'back', class: 'btn btn-default btn-block' %>
        <% end %>
    </div>
</div>
